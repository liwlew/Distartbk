<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_top"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".category">

    <WebView
        android:id="@+id/weviewvdo"
        android:layout_width="0dp"
        android:layout_height="723dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></WebView>

    <VideoView
        android:id="@+id/vdo_on"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/view_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimaryDark"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pordee Express"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/edit_txt_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="400dp"
                    android:background="@drawable/login_edittext"
                    android:ems="20"
                    android:gravity="right"
                    android:inputType="text"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"
                    android:textColorHint="@color/gray_500" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_cart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="60dp"
                        android:gravity="center"
                        android:text="1"
                        android:visibility="gone"
                        android:background="@drawable/circle"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btm_enter_search"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/btn_cart"
                        android:gravity="right"
                        android:text=""
                        android:textSize="26dp" />


                </RelativeLayout>

                <Button
                    android:id="@+id/btm_lang_thai"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/btm_lang_eng"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/btm_lang_china"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    />
            </android.support.v7.widget.Toolbar>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background">


            <Button
                android:id="@+id/button"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/button2"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/button3"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/button4"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotels"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/btmtest"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="850dp"
                android:text="Staff Login"
                android:visibility="gone"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/category"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="800dp"
                android:text="category"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />
            <!--  <Button
                  android:id="@+id/cateall"
                  style="@android:style/Widget.Holo.Light.Button"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="500dp"
                  android:text="All"

                  tools:layout_editor_absoluteX="45dp"
                  tools:layout_editor_absoluteY="52dp" />
              <Button
                  android:id="@+id/cate1"
                  style="@android:style/Widget.Holo.Light.Button"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Health"
                  tools:layout_editor_absoluteX="45dp"
                  tools:layout_editor_absoluteY="52dp" />

              <Button
                  android:id="@+id/cate2"
                  style="@android:style/Widget.Holo.Light.Button"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Groceries"
                  tools:layout_editor_absoluteX="45dp"
                  tools:layout_editor_absoluteY="52dp" />-->

            <!-- <Button
            android:id="@+id/testsearch"
            style="@android:style/Widget.Holo.Light.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test search"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="52dp" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgcolor">

            <GridView
                android:id="@+id/gridview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:clickable="true"
                android:columnWidth="250dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="4"
                android:stretchMode="spacingWidthUniform"
                android:verticalSpacing="10dp" />
        </LinearLayout>

    </LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/itemview"
        android:visibility="gone"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:background="@color/bgcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btm_back"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:scaleType="fitCenter"
                android:src="@drawable/back1" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="322dp"
            android:layout_height="368dp"
            android:layout_marginStart="192dp"
            android:layout_marginTop="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="650dp"
            android:layout_marginEnd="8dp"
            android:background="@color/bgcolor"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/txt_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="คุณสมบัติ"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="300dp">
                <TextView
                    android:id="@+id/txt_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    android:text="test" />
            </ScrollView>
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:text="ราคา"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />
            <ProgressBar

                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:text="สถานะสินค้า"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/txt_status"
                android:text="พร้อมส่ง"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:text="ประเภทของการรับประกัน"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/txt_cetology"
                android:text="รับประก้น 7 วัน"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>





        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginStart="552dp"
            android:layout_marginTop="84dp"
            android:numStars="5"
            android:rating="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="96dp"
            android:text="@string/reviews"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/ratingBar"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btmadd0"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="168dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtview0" />

        <TextView
            android:id="@+id/txtview0"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="168dp"
            android:gravity="center"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btmdelete" />

        <Button
            android:id="@+id/btmdelete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="620dp"
            android:layout_marginBottom="168dp"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btm_addcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="657dp"
            android:layout_marginTop="35dp"
            android:text="Add To Cart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtview0" />

        <TextView
            android:id="@+id/txtprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="656dp"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:text="test"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>