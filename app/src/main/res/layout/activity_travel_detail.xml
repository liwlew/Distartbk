                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtheader2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="ที่อยู่ : "
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:text="ถนน หน้าพระลาน แขวง พระบรมมหาราชวัง เขต พระนคร กรุงเทพมหานคร 10200"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/txtheader3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginTop="10dp"
                android:text="ติดต่อ :  "
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:text=" 02 224 3290"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/txtheader4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="ข้อแนะนำ :  "
                android:textSize="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:text="ไม่ควรใช้แฟลช ในถ่ายภาพจิตรกรรมฝาผนัง และไม่อนุญาตให้ถ่ายภาพภายในพระอุโบสถเด็ดขาด ฝ่าฝืนมีโทษปรับและยึดฟิล์ม/สื่อบันทึก"
                android:textSize="20dp"/>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>