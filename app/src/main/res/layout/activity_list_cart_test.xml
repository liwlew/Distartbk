<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list_cart_test">

    <CheckBox
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_cart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_cart"
        android:layout_width="252dp"
        android:layout_height="0dp"
        android:layout_marginStart="356dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="test"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="412dp"
        android:layout_marginTop="156dp"
        android:gravity="center"
        android:text="-"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edit_num"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="156dp"
        android:gravity="center"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/delete_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="156dp"
        android:text="+"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/edit_num"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancel_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="X"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/name_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="20dp"
        android:ems="5"
        android:gravity="center"
        android:text="price"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/image_cart"
        app:layout_constraintTop_toBottomOf="@+id/name_cart" />
</android.support.constraint.ConstraintLayout>