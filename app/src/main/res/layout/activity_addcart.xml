<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context=".addcart">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimaryDark"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pordee Expoess"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/edit_txt_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="400dp"

                    android:ems="20"
                    android:background="@drawable/login_edittext"
                    android:gravity="right"
                    android:inputType="text"
                    android:textColorHint="@color/gray_500"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"
                    android:hint="Seach product"/>

                <Button
                    android:id="@+id/btm_enter_search"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/btn_cart"
                    />
            </android.support.v7.widget.Toolbar>


        </LinearLayout>

        <LinearLayout
            android:background="@color/cardview_light_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thai Gifts"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/button2"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/button3"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/button4"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotels"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:layout_marginLeft="850dp"
                android:id="@+id/btmtest"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Login"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

        <!--    <Button
                android:id="@+id/btmtestcart"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Cart"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />-->

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcolor"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="800dp"
            android:layout_height="500dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="20dp"
            android:background="@color/cardview_light_background"
            android:orientation="vertical">

            <TextView
                android:gravity="right"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="25dp"
                android:text="Name"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="26dp" />

            <TextView
                android:gravity="right"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="85dp"
                android:text="Email"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="26dp" />

            <TextView
                android:gravity="right"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="145dp"
                android:text="Tel"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="26dp" />
            <TextView
                android:gravity="right"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="205dp"
                android:text="Hotel"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="26dp" />


            <EditText
                android:id="@+id/edt_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="25dp"
                android:hint="somsak"
                android:background="@drawable/login_edittext"
                android:ems="20"
                android:inputType="text" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="85dp"
                android:hint="pordee@shop.com"
                android:background="@drawable/login_edittext"
                android:ems="20" />

            <EditText
                android:id="@+id/edt_call"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="200dp"
                android:background="@drawable/login_edittext"
                android:layout_marginTop="145dp"
                android:hint="0912345678"
                android:ems="20" />
            <EditText
                android:id="@+id/edt_location"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="200dp"
                android:background="@drawable/login_edittext"
                android:layout_marginTop="205dp"
                android:hint="Room"
                android:ems="20" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="423dp"
                android:text="submit" />

            <Button
                android:id="@+id/back_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="345dp"
                android:text="back" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

    <ListView
        android:id="@+id/listview_cart"
        android:layout_width="698dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:background="@color/cardview_light_background"
        app:layout_constraintEnd_toStartOf="@+id/rela_price"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"></ListView>


        <LinearLayout
            android:id="@+id/rela_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:background="@color/bgcolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="วิธีการชำระเงิน"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="26dp" />

                <RelativeLayout
                    android:background="@color/cardview_light_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/wechat"
                        android:layout_width="140dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="72dp"
                        android:src="@drawable/wechat" />
                    <ImageView
                        android:id="@+id/alipay"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="220dp"
                        android:layout_marginTop="72dp"
                        android:src="@drawable/alipay_logo" />

                    <ImageView
                        android:id="@+id/paysolution"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="361dp"
                        android:layout_marginTop="72dp"
                        android:src="@drawable/paysolution2" />

                    <RadioGroup
                        android:id="@+id/rdo_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdo_wechat"
                            android:layout_width="40dp"

                            android:layout_height="40dp"
                            android:layout_below="@+id/paysolution"
                            android:layout_marginStart="68dp"
                            android:layout_marginTop="30dp"
                            android:clickable="true"
                            android:selectAllOnFocus="true" />
                        <RadioButton
                            android:id="@+id/rdo_alipay"
                            android:layout_width="40dp"
                            android:layout_height="40dp"

                            android:layout_below="@+id/alipay"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="140dp"
                            android:layout_marginTop="30dp" />

                        <RadioButton
                            android:id="@+id/rdo_paysolution"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/paysolution"
                            android:layout_marginStart="150dp"
                            android:layout_marginTop="30dp"
                            android:clickable="true"
                            android:selectAllOnFocus="true" />
                    </RadioGroup>
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/cardview_light_background">

                <ListView
                    android:id="@+id/listview_cart2"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/cardview_light_background"
                    app:layout_constraintHorizontal_bias="0.666"
                    app:layout_constraintStart_toStartOf="parent"></ListView>

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="78dp"
                    android:layout_marginBottom="73dp"
                    android:text="Delivery"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/txtdelively"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="62dp"
                    android:layout_marginBottom="72dp"
                    android:layout_toEndOf="@+id/txt3"
                    android:ems="8"
                    android:gravity="right"
                    android:text="100 THB"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/txttt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="73dp"
                    android:layout_marginBottom="41dp"
                    android:text="ยอดรวม: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/txttotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="51dp"
                    android:layout_marginBottom="37dp"
                    android:layout_toEndOf="@+id/txttt"
                    android:ems="6"
                    android:gravity="right"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/orage"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_totalsm"
                    android:layout_width="146dp"
                    android:layout_height="78dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/orage"
                    android:text="ชำระเงิน"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="26dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>