                    android:layout_marginTop="30dp"
                    android:numStars="5"
                    android:rating="4"
                    android:scaleX="0.5"
                    android:scaleY="0.5" />

                <ProgressBar
                    android:id="@+id/pro2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="380dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/review"
