<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimaryDark"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                tools:layout_editor_absoluteX="0dp" >
                <TextView
                    android:text="Pordee Expoess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@color/cardview_light_background"/>
                <EditText
                    android:id="@+id/edit_txt_search"
                    android:layout_marginStart="400dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:gravity="right"
                    android:background="@drawable/login_edittext"
                    android:inputType="text"
                    android:textColorHint="@color/gray_500"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed"
                    android:hint="Seach product"/>
                <Button
                    android:id="@+id/btm_enter_search"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/btn_cart"
                    />
            </android.support.v7.widget.Toolbar>


        </LinearLayout>


        <LinearLayout
            android:background="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thai Gifts"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/button2"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/button3"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:id="@+id/button4"
                style="@android:style/Widget.Holo.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotels"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />

            <Button
                android:layout_marginLeft="850dp"
                android:id="@+id/btmtest"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Login"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="52dp" />


            <!-- <Button
            android:id="@+id/testsearch"
            style="@android:style/Widget.Holo.Light.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test search"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="52dp" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--<ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/testmap1"
            android:scaleType="fitCenter"/>

        <Button
