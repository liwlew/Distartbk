                    android:layout_marginStart="40dp"
                    android:layout_marginTop="105dp"
                    android:numStars="5"
                    android:rating="1"
                    android:scaleX="0.5"
                    android:scaleY="0.5" />

                <ProgressBar
                    android:id="@+id/pro5"
